{
  "env": {
    "browser": true,
    "es2022": true
  },
  "extends": ["google"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "require-jsdoc": "off",
    // "max-len": ["warn", { "code": 100, "tabWidth": 4 }],
    "max-len": "off",
    "object-curly-spacing": "off",
    "new-cap": "off",
    "brace-style": "off",
    "comma-dangle": "off",
    "indent": "off",
    "camelcase": "warn",
    "operator-linebreak": "off",
    "spaced-comment": "off",
    "no-unused-vars": "off",
    "prefer-const": "warn",
    "quote-props": "off",
    "guard-for-in": "warn",
    "quotes": "off",
    "prefer-spread": "warn",
    "space-before-function-paren": [
      "off",
      {
        "anonymous": "always",
        "named": "always",
        "asyncArrow": "always"
      }
    ],
    "lines-between-class-members": [
      "error",
      "always",
      {
        "exceptAfterSingleLine": true
      }
    ],
    "no-invalid-this": "warn",
    "no-console": [
      "error",
      {
        "allow": ["error", "warn"]
      }
    ],
    // "curly": ["warn", "multi", "consistent"],
    "valid-jsdoc": "warn",
    "complexity": [
      "error",
      {
        "max": 20
      }
    ],
    "max-statements-per-line": [
      "warn",
      {
        "max": 1
      }
    ],
    "no-var": "warn",
    "no-debugger": "error",
    "linebreak-style": "off"
  }
}
